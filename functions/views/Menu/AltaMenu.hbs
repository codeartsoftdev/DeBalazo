<div class="container-fluid">
    <div class="container">

        <div>
            <h2>
                Alta de menú
            </h2>
            <p></p>
        </div>


        <form class="form-horizontal" method="post" action="/menu">
            <div class="form-group ">


                <div class="row">
                    <div class="col-md-4">


                        <div class="card bg-light text-dark">
                            <div class="card-body" style="padding:5px;">
                                <div class="row">
                                    <img id="profile-img-tag" name="profile-img-tag"
                                        src="https://i.ibb.co/jb2RzWh/DeBalazo.png" alt="imgAlt"
                                        style="display: block; margin-left: auto; margin-right: auto; width: 100%;" />
                                </div>
                                <br>
                                <div class="row">
                                    <label for="profile-img" class="control-label">
                                        Foto/Imagen
                                        <span style="color: red;">*</span>
                                    </label>
                                    <input type="file" id="profile-img" name="profile-img" data-toggle="tooltip"
                                        title="Selecciona la imagen correspondiente al producto a registrar"
                                        class="input-file" accept="image/*" required>
                                </div>
                            </div>
                        </div>



                    </div>


                    <div class="col-md-8">
                        <div class="card bg-light text-dark">
                            <div class="card-body">

                                <div class="row">
                                    <div class="col-md-6" style="text-align:center;">
                                        <label for="Titulo" class="control-label">
                                            Titulo
                                            <span style="color: red;">*</span>
                                        </label>
                                        <input type="text" id="Titulo" name="Titulo"
                                            placeholder="Ingresa nombre del platillo/bebida" data-toggle="tooltip"
                                            title="Ingresa nombre del platillo/bebida"
                                            class="form-control text-sm-center mw-100"
                                            style="margin:0px auto; display:block;" autocomplete="off" required />
                                    </div>

                                    <div class="col-md-6" style="text-align:center;">
                                        <label for="Precio" class="control-label">
                                            Precio
                                            <span style="color: red;">*</span>
                                        </label>
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">$</span>
                                            </div>
                                            <input type="text" id="Precio" name="Precio" placeholder="0.00"
                                                data-toggle="tooltip" title="Ingresa precio del producto"
                                                class="form-control text-sm-center mw-100"
                                                style="margin:0px auto; display:block;" autocomplete="off" required />
                                        </div>
                                    </div>
                                </div>

                                <br>

                                {{!-- ** ACTIVO: MUESTRA COLLAPSABLE DE OPCIONES CH, M, G ** --}}
                                <div class="row">
                                    <div class="col-md-12" style="text-align:center;">
                                        <div class="custom-control custom-switch">
                                            <input type="checkbox" class="custom-control-input" id="DifPorc"
                                                name="DifPorc" onclick="EnableDiv();">
                                            <label class="custom-control-label" for="DifPorc">¿Diferentes
                                                porciones?</label>
                                        </div>
                                    </div>
                                      <br>
                                </div>

                             

                                <div class="row">
                                     

                                    <div class="col-md-4" id="Ch" style="text-align:center; display:none;">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="chkCh" name="chkCh" onclick="EnableDisableChico(this);">
                                            <label class="custom-control-label" for="chkCh">Chico</label>
                                        </div>
                                        <div class="input-group mt-2">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">$</span>
                                            </div>
                                            <input type="text" id="txtCh" name="txtCh" placeholder="0.00"
                                                data-toggle="tooltip" title="Ingresa precio del producto"
                                                class="form-control text-sm-center mw-100"
                                                style="margin:0px auto; display:block;" autocomplete="off"
                                                disabled="disabled" />
                                        </div>
                                    </div>

                                    <div class="col-md-4" id="Md" style="text-align:center; display:none;">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="chkMed"
                                                name="chkMed" onclick="EnableDisableMediano(this);">
                                            <label class="custom-control-label" for="chkMed">Mediano</label>
                                        </div>
                                        <div class="input-group mt-2">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">$</span>
                                            </div>
                                            <input type="text" id="txtMed" name="txtMed" placeholder="0.00"
                                                data-toggle="tooltip" title="Ingresa precio del producto"
                                                class="form-control text-sm-center mw-100"
                                                style="margin:0px auto; display:block;" autocomplete="off"
                                                disabled="disabled" />
                                        </div>
                                    </div>

                                    <div class="col-md-4" id="Gd" style="text-align:center; display:none;">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="chkGde"
                                                name="chkGde" onclick="EnableDisableGrande(this);">
                                            <label class="custom-control-label" for="chkGde">Grande</label>
                                        </div>
                                        <div class="input-group mt-2">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">$</span>
                                            </div>
                                            <input type="text" id="txtGde" name="txtGde" placeholder="0.00"
                                                data-toggle="tooltip" title="Ingresa precio del producto"
                                                class="form-control text-sm-center mw-100"
                                                style="margin:0px auto; display:block;" autocomplete="off"
                                                disabled="disabled" />
                                        </div>
                                    </div>

                                    

                                </div>                                

                                <div class="row">
<br>
                                    <div class="col-md-12">
                                        <label for="Descripcion" class="control-label">
                                            Descripción
                                            <span style="color: red;">*</span>
                                        </label>
                                        <textarea class="form-control mw-100" rows="4" id="Descripcion"
                                            name="Descripcion"
                                            placeholder="Agrega una breve descripción del producto (ingredientes, preparación, contenido, etc.)"
                                            style="margin:0px auto; display:block;" autocomplete="off"
                                            style="width:100%;" required></textarea>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <br>

                <div class="row">
                    <div class="col-md-5">
                        {{!-- <label for="profile-img" class="control-label">
                            Foto/Imagen
                            <span style="color: red;">*</span>
                        </label>
                        <input type="file" id="profile-img" name="profile-img" data-toggle="tooltip"
                            title="Selecciona la imagen correspondiente al producto a registrar" class="input-file"
                            accept="image/*" required> --}}
                    </div>

                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary btn-lg btn-block" id="btnAgregar"
                            name="btnAgregar">
                            <span class="fa fa-floppy-o">
                                Agregar
                            </span>
                        </button>
                    </div>

                    <div class="col-md-5">

                    </div>
                </div>



            </div>
        </form>

    </div>
</div>



